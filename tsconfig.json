{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/": ["shared-packages/react/components/index.ts"],
      "@shared/*": ["shared-packages/*"]
    }
  },
  "references": [
    { "path": "shared-packages" },
    { "path": "auth_frontend" },
  ]
}